generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id       String @id @default(uuid())
  password String
  name     String
}

model Post {
  id        String    @id @default(uuid())
  title     String
  content   String
  userid    String
  like      Int
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  comments   Comment[]
}

model Comment {
  id     String @id @default(uuid())
  post   Post   @relation(fields: [postId], references: [id])
  postId String
}
